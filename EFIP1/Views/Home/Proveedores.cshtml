@model EFIP1.Models.ListaProveedores

@{
    ViewBag.Title = "Proveedores Calificados";
}
<h2>@ViewBag.Title</h2>

<p>Promedio de calificaciones para cada proveedor:</p>

@for (int i = 0; i < Model.Proveedores.Count(); ++i)
{
    <strong>@Html.DisplayTextFor(m => m.Proveedores[i].Nombre)</strong>
    <span>@Html.DisplayTextFor(m => String.Format("{0:0.0#}", m.Proveedores[i].PuntajePromedio))</span>

    @Html.Raw(" (");
    @Html.Raw(string.Join(", ", Model.Proveedores[i].Valores).ToString());
    @Html.Raw(")");

    <br />
}