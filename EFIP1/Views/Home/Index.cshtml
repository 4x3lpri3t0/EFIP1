@model EFIP1.Models.Calificacion

@{
    ViewBag.Title = "Calificar Proveedor";
    Layout = "../Shared/_Layout.cshtml";
}

<form id="MyForm" action="Home/PostCalificacion" method="post">
    <div class="jumbotron">
        <h1>Calificar Proveedor</h1>
        <br /><br />
        <div>
            <div class="row">
                <label class="col-lg-4">N° Proveedor</label>
                @Html.TextAreaFor(m => m.NroProveedor)
            </div>
            <div class="row">
                <label class="col-lg-4">Orden de Compra</label>
                @Html.TextAreaFor(m => m.NroOrdenCompra)
            </div>
            @*<div class="row">
                <label class="col-lg-4">Fecha de Entrega</label>
                <textarea></textarea>
                @
                @*TODO: Use jQuery calendar*@
        </div>
        <div class="row">
            <label class="col-lg-4">Forma de Pago</label>
            @Html.EnumDropDownListFor(m => m.FormaPago)
        </div>
        <div class="row">
            <label class="col-lg-4">Puntaje de Calificación</label>
            @Html.TextAreaFor(m => m.Puntaje)
        </div>
        <div class="row">
            <label class="col-lg-4">Observaciones</label>
            @Html.TextAreaFor(m => m.Observaciones)
        </div>
        <br /><br />
        <div class="row"><button style="float: right">Calificar</button></div>
    </div>
</form>

<script>

 $(document).ready(function () {
     console.log(1);
    $('#MyForm').submit(function (e) {
        console.log(2);
        var formData = new FormData(this);

        $.ajax({
            url: '@Url.Action("MyAction", "Home")',
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
             // here in result you will get your data
                console.log(result);
            },
            error: function (result) {

            }
        });
        e.preventDefault();
    });
});
</script>

